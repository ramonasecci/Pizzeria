@model IEnumerable<Pizzeria.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Ordini</h2>

<p>
    @Html.ActionLink("Create New", "Create","Ordini")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indirizzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stato)
        </th>
        <th>
            Costo Consegna
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Users.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.Cognome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Indirizzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoCons)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Ordine_ID }) |
            <a href="/OrdArts/Details/@item.Ordine_ID">Details</a>
            @Html.ActionLink("Delete", "Delete", new { id = item.Ordine_ID })
        </td>
    </tr>
}

</table>
